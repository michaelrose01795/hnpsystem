  <script>
    const wheels = Array.from(document.querySelectorAll('.wheel'));
    wheels.forEach((wheel) => {
      wheel.addEventListener('click', () => {
        wheels.forEach((w) => w.classList.remove('selected'));
        wheel.classList.add('selected');
      });
    });
  </script>
